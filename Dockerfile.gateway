# Build stage
FROM golang:1.24-alpine AS builder

WORKDIR /workspace

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the api-gateway binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -a -o api-gateway cmd/api-gateway/main.go

# Runtime stage
FROM gcr.io/distroless/static:nonroot

WORKDIR /

COPY --from=builder /workspace/api-gateway .

USER 65532:65532

EXPOSE 8080

ENTRYPOINT ["/api-gateway"]
